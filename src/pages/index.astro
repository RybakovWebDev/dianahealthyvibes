---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header/Header.astro";
import Hero from "../components/Hero/Hero.astro";
import CanHelp from "../components/CanHelp/CanHelp.astro";
import ConsultationInvitation from "../components/ConsultationInvitation/ConsultationInvitation.astro";
import PlanBreakdown from "../components/PlanBreakdown/PlanBreakdown.astro";
import CostBreakdown from "../components/CostBreakdown/CostBreakdown.astro";
import CombinedPlan from "../components/CombinedPlan/CombinedPlan.astro";
import Welcome from "../components/Welcome.astro";

import { CombinedPlan_Text, NutritionSupport_Text } from "../constantsText";

const locale = Astro.currentLocale || "en";
---

<Layout title="Diana Gurvich">
  <Header locale={locale} />
  <Hero locale={locale} />
  <CanHelp locale={locale} />
  <ConsultationInvitation locale={locale} />
  <PlanBreakdown
    locale={locale}
    title={NutritionSupport_Text.title}
    subtitle={NutritionSupport_Text.subtitle}
    list={NutritionSupport_Text.list}
  />
  <CostBreakdown
    locale={locale}
    costTitle={NutritionSupport_Text.costTitle}
    costDescription={NutritionSupport_Text.costDescription}
    costFullNumber={NutritionSupport_Text.costFullNumber}
    costEconomyNumber={NutritionSupport_Text.costEconomyNumber}
    costFullPriceTitle={NutritionSupport_Text.costFullPriceTitle}
    costEconomyPriceTitle={NutritionSupport_Text.costEconomyPriceTitle}
    costButton={NutritionSupport_Text.costButton}
  />
  <CombinedPlan
    locale={locale}
    title={CombinedPlan_Text.title}
    description={CombinedPlan_Text.description}
    costFull={CombinedPlan_Text.costFull}
    costDiscount={CombinedPlan_Text.costDiscount}
    button={CombinedPlan_Text.button}
  />
  <!-- <Welcome /> -->
</Layout>
